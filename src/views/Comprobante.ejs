<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <title>PDF</title>

  <style>
    thead {
      font-size: 8pt;
    }

    tbody {
      font-size: 8pt;
    }
  </style>
</head>

<body>
  <div class="container">
    <div class="row gy'5">
      <div class="col-8">
        <div class="row">
          <div class="col-4 align-middle">
            <img width="130" src=<%=logo%> />
          </div>

          <div class="col-8 ">
            <div class="fw-bold text-h5"><%=nombreComercial%></div>
            <div><%=direccionCasaMatriz%></div>
            <div>Telf: <%=direccionCasaMatriz%></div>
            <div>E-mail: <%=correoElectronico%></div>
            <div><%=direccionCasaMatriz%></div>
          </div>
        </div>
      </div>
  
      <div class="col-4">
        NRO
      </div>
  
      <div class="col-12">
        <h4 class="text-center fw-bold">COMPROBANTE DE <%=tipo%></h4>
      </div>
  
      <table class="table table-bordered">
          <thead>
            <tr>
              <th colspan="5">
                <div>LUGAR Y FECHA: La Paz, <%=fecha%></div>
                <div>CONCEPTO: <%=glosa%></div>
              </th>
            </tr>
          </thead>
  
          <thead>
            <tr>
              <th>REF.</th>
              <th>CUENTA</th>
              <th>DESCRIPCIÃ“N</th>
              <th>DEBE BS</th>
              <th>HABER BS</th>
            </tr>
          </thead>

          <tbody>
            <% debe.forEach((detalle) => { %>
            <tr>
              <td>
                <%= detalle.referencia %>
              </td>
              
              <td>
                <div class="fw-bold"><%= detalle?.planCuenta?.numeroCuentaPadre %></div>
                <div><%= detalle?.planCuenta?.numeroCuenta %></div>
              </td>

              <td>
                <div class="fw-bold"><%= detalle?.planCuenta?.nombre %></div>
                <div class="text-decoration-underline">DEMO</div>
                <div><%= detalle?.glosa || glosa %></div>
              </td>

              <td class="text-end"><%= detalle.debe || '' %></td>

              <td class="text-end"><%= detalle.haber || '' %></td>
            </tr>
            <% }) %>

            <!-- HABER -->
            <% haber.forEach((detalle) => { %>
            <tr>
              <td>
                <%= detalle.referencia %>
              </td>
              
              <td>
                <div class="fw-bold"><%= detalle?.planCuenta?.numeroCuentaPadre %></div>
                <div><%= detalle?.planCuenta?.numeroCuenta %></div>
              </td>

              <td>
                <div class="ps-4">
                  <div class="fw-bold"><%= detalle?.planCuenta?.nombre %></div>
                  <div class="text-decoration-underline">DEMO</div>
                  <div><%= detalle?.glosa || glosa %></div>
                </div>
              </td>

              <td class="text-end"><%= detalle.debe || '' %></td>

              <td class="text-end"><%= detalle.haber || '' %></td>
            </tr>
            <% }) %>


            <tr>
              <td></td>
              <td></td>
              <td>TOTALES:</td>
              <td></td>
              <td></td>
            </tr>
          </tbody>
      </table>
    </div>
  </div>
</body>

</html>